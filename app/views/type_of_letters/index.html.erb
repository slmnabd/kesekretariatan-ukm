<div class="" style="width:80%;margin: 0 auto;">
  <h2>Tipe surat</h2>

  <%= link_to 'tambah Jurusan', new_type_of_letter_path, class: 'btn btn-primary' %>
  <br><br>

  <% if @type_of_letter.any? %>
  <table class="table table-bordered table-hover" style="">
    <thead>
      <tr class="text-center">
        <td>No</td>
        <td>Nama</td>
        <td>Action</td>
      </tr>
    </thead>

    <tbody>
      <% no = 0 %>
      <% @type_of_letter.each do |s| %>
      <tr>
        <td class="text-center"><%= no += 1 %></td>
        <td><%= s.name %></td>
        <td class="text-center"><%= link_to 'edit', edit_type_of_letter_path(s) %> | <%= link_to 'delete', type_of_letter_path(s), method: :delete, data: {confirm: "are you sure ?"} %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <br><br>
  <%= "data kosong, silahkan input data terlebih dahulu" %>
  <% end %>
</div>
